    <h2>GROCERY STORE</h2>
    <h4>ITEMS </h4>
    <br><br>

    <div class="container">
        <div class="row">
            <div class="col">
                <table>
                    <th>ITEM ID</th>
                    <th>ITEM NAME</th>
                    <th>QUANTITY</th>
                    <th>DESCRIPTION</th>
                    <th>TAXABLE</th>
                    <th>PRICE</th>
                    <th>WEIGHT</th>
                    <th>STORE ID</th>
                    <th>CHECKOUT ID</th>
                
                    <% for(var i=0; i < arr.length;i++ ){ %>
                        <tr>
                            <td>
                                <%= arr[i].item_id %>
                            </td>
                            <td>
                                <%= arr[i].item_name %>
                            </td>
                            <td>
                                <%= arr[i].qty %>
                            </td>
                            <td>
                                <%= arr[i].description %>
                            </td>
                            <td>
                                <%= arr[i].taxable %>
                            </td>
                            <td>
                                <%= arr[i].price %>
                            </td>
                            <td>
                                <%= arr[i].weight %>
                            </td>
                            <td>
                                <%= arr[i].store_id %>
                            </td>
                            <td>
                                <%= arr[i].checkout_id %>
                            </td>
                        </tr>
                        <% } %>
                </table>

            </div>

            <div class="col">

                <form method="post">
                
                    <h3>NEW ITEMS</h3>
                    <label for="itemname" class="form-label">ITEM Name</label>
                    <input type="text" name="itemname" id="" class="form-control" autocomplete="off"> 
                
                    
                    <label for="qty" class="form-label">Quantity</label>
                    <input type="number" name="qty" id="" class="form-control" autocomplete="off">
                
                   
                    <label for="description" class="form-label">DESCRIPTION</label>
                    <textarea name="description" id="" cols="30" rows="2" class="form-control" autocomplete="off"></textarea>
                
                    <br>
                    <label for="taxable">TAXABLE? :</label>
                
                    <label for="taxable">YES</label>
                    <input type="radio" name="taxable" id="" value="yes">
                    <label for="taxable">NO</label>
                    <input type="radio" name="taxable" id="no">
                    <br>
                    <br>
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="price" id="" class="form-control" autocomplete="off">
                
                   
                    <label for="weight" class="form-label">WEIGHT</label>
                    <input type="text" name="weight" id="" class="form-control" autocomplete="off">
                
                   
                    <label for="store_id" class="form-label">STORE ID</label>
                    <input type="text" name="store_id" id="" class="form-control" autocomplete="off">
                    
                    <br>
                    <button type="submit">ADD ITEM</button>
                </form>
            </div>

        </div>

    </div>
   



    
